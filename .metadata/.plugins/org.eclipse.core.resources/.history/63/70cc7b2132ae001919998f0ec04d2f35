package dynamite;

import java.awt.Graphics;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import java.awt.Color;
import javax.swing.*;

public class Dynamite extends JFrame implements ActionListener {
	
	JPanel jpan = new JPanel();
	Timer tm = new Timer(800, this);
	byte backgroundR = 111, backgroundG = 0, backgroundB = 0;
	
	public Dynamite () {
//		this.setSize(1280, 720);
//		this.setVisible(true);
//		this.setDefaultCloseOperation(EXIT_ON_CLOSE);
//		this.setResizable(false);
//		this.getContentPane().setBackground(new Color(backgroundR, backgroundG, backgroundB));
		
		jpan.setBackground(new Color(backgroundR, 0, 0));
		this.add(jpan);
	}
	
	int x1 = 0;
	int x2 = 500;
	int y1 = 100;
	int y2 = 500;
	
	public void paint(Graphics g) {
//		g.setColor(Color.black);
//		g.setBackground(Color.black);
//		jpan.setBackground(Color.BLACK);
		
		super.paint(g);
		g.setColor(Color.green);
//		g.drawLine(x1, y1, x2, y2);
		g.fillRect(100, y1, 20, 25);
		tm.start();
	
	}
	
	public void actionPerformed(ActionEvent e) {
		x1++;
		y1 = y1 + 1;
		repaint();
	}
	
	public static void main(String[] args) {
		
		Dynamite j = new Dynamite();
		JFrame jf = new JFrame();
		j.setSize(1280, 720);
		j.setVisible(true);
		j.setDefaultCloseOperation(EXIT_ON_CLOSE);
		j.setResizable(false);
		

		
	}

}
