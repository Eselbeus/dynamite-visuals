package dynamite;

import java.awt.Graphics;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import java.awt.Color;
//import javax.swing.*;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.Timer;


public class Dynamite extends JPanel implements ActionListener {
	
	JPanel jpan = new JPanel();
	Timer tm = new Timer(5000, this);
	byte backgroundR = 111, backgroundG = 0, backgroundB = 0;
	
	public Dynamite () {
//		this.setSize(1280, 720);
//		this.setVisible(true);
//		this.setDefaultCloseOperation(EXIT_ON_CLOSE);
//		this.setResizable(false);
//		this.getContentPane().setBackground(new Color(backgroundR, backgroundG, backgroundB));
		jpan.setBackground(new Color(backgroundR, 0, 0));
		this.add(jpan);
	}
	
	int x1 = 0, x2 = 500, y1 = 100, y2 = 500;
	
	
	public void paintComponent(Graphics g) {
//		g.setColor(Color.black);
//		g.setBackground(Color.black);
//		jpan.setBackground(Color.BLACK);
		
		super.paintComponent(g);
		g.setColor(Color.green);
		g.drawLine(x1, y1, x2, y2);
		g.drawRect(100, y1, 20, 25);
		tm.start();
	
	}
	
	public void actionPerformed(ActionEvent e) {
//		x1++;
//		y1 = y1 + 5;
		repaint();
//		revalidate();
	}
	
	public static void main(String[] args) {
		
		Dynamite j = new Dynamite();
		JFrame jf = new JFrame();
		jf.setSize(1280, 720);
		jf.setVisible(true);
		jf.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		jf.setResizable(false);
		jf.add(j);

		
	}

}
